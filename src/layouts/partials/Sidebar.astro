---
const { sidebarActive } = Astro.props;
---

<aside
    class="border-r-[1px] bordercol bg-white border-gray-200 h-screen top-0 left-0 w-[248px] fixed z-20 sidebar transition-all duration-500"
>
    <div class="blank"></div>
    <div class="px-5 flex justify-between items-center h-[8vh] z-20">
        <a
            href="/menu/dashboard/basic-dashboard.html"
            class="flex items-center gap-x-3"
        >
            <img src="/icons/logo.svg" class="w-8" alt="logo" />
            <h1 class="font-semibold text-gray-700 text-xl">Atika</h1>
        </a>
        <div class="close-sidebar-btn lg:hidden">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-5 h-5"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </div>
    </div>
    <div class="p-4">
        <ul class="flex flex-col gap-y-4">
            <li>
                <h4 class="font-semibold text-xs pb-3">MENU</h4>

                <ul class="flex flex-col gap-y-1">
                    <li
                        class={`submenu-item ${
                            sidebarActive == "menu/dashboard/basic-dashboard"
                                ? "active"
                                : ""
                        }`}
                    >
                        <div
                            class="cursor-pointer flex justify-between items-center px-3 py-2 rounded-md"
                        >
                            <div class="flex gap-x-2.5 items-center">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                    class="w-5 h-5"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"
                                    ></path>
                                </svg>
                                <span class="text-sm">Dashboard</span>
                            </div>
                            <div class="submenu-item-chevron flex items-center">
                                <span class="bg-gray-100 p-1 rounded-full">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="1.5"
                                        stroke="currentColor"
                                        class="w-4 h-4"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M8.25 4.5l7.5 7.5-7.5 7.5"
                                        ></path>
                                    </svg>
                                </span>
                            </div>
                        </div>

                        <ul
                            class="pl-5 gap-y-3.5 flex-col transition-all duration-500 submenu-accord"
                        >
                            <li>
                                <a
                                    href="/menu/dashboard/basic-dashboard.html"
                                    class="submenu-accord-item flex items-center gap-x-3 cursor-pointer"
                                >
                                    <span
                                        class="bg-slate-900 ring-4 ring-gray-300 h-2 w-2 rounded-full border border-slate-600 inline-block flex-none"
                                    >
                                    </span>
