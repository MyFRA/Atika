---
import AuthLayout from "../../layouts/AuthLayout.astro";
---

<AuthLayout>
    <div class="w-3/12">
        <div class="card">
            <h2
                class="text-center text-lg font-semibold text-gray-700 capitalize"
            >
                Sign Up
            </h2>
            <p class="text-center text-gray-400 text-sm mt-0.5">
                Welcome & Join with us by creating account
            </p>

            <form>
                <div class="mt-6">
                    <div class="mb-4">
                        <label class="text-sm text-gray-700" for="name"
                            >Name</label
                        >
                        <input
                            placeholder="Name"
                            id="name"
                            type="text"
                            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                        />
                    </div>

                    <div class="mb-4">
                        <label class="text-sm text-gray-700" for="emailAddress"
                            >Email Address</label
                        >
                        <input
                            placeholder="Email"
                            id="emailAddress"
                            type="email"
                            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                        />
                    </div>

                    <div class="mb-4 flex flex-col">
                        <label class="text-sm text-gray-700" for="password"
                            >Password</label
                        >
                        <input
                            placeholder="Password"
                            id="password"
                            type="password"
                            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                        />
                    </div>

                    <div class="mb-4 flex flex-col">
                        <label
                            class="text-sm text-gray-700"
                            for="passwordConfirmation"
                            >Password Confirmation</label
                        >
                        <input
                            placeholder="Password Confirmation"
                            id="passwordConfirmation"
                            type="password"
                            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                        />
                    </div>
                </div>

                <div class="mt-6">
                    <button
                        type="button"
                        onclick="
                        window.location.href = '/'
                        "
                        class="font-[500] w-full px-8 py-2.5 leading-5 text-white transition-colors duration-300 transform bg-blue-700 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600"
                        >Register
                    </button>
                    <p
                        class="text-sm text-gray text-center mt-3.5 text-gray-600"
                    >
                        Already have an account
                        <a
                            href="/pages/login"
                            class="hover:text-blue-600 text-blue-500">Login</a
                        >
                    </p>
                </div>
            </form>
        </div>
    </div>
</AuthLayout>
